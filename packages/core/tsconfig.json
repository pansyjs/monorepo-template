{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "rootDir": "src",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["./dist"]
}
